
@using System.Drawing
@using brainiespark.Models
@using Newtonsoft.Json
@model brainiespark.Models.NewNotificationViewModel

@{
    ViewBag.Title = string.Format($"{Model.Notification.NotificationDate}");
}

<!DOCTYPE html>
<html>
<head>
    @*<link href="~/Content/w3.css" rel="stylesheet" /*@>
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet" />
</head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
    <div class="jumbotron" style="width: 100%; min-height: 600px; min-height: 800px">
        <button type="button" class="btn btn-link" data-dismiss="modal" style="float: right"><h3>X</h3></button>

        <div style="width: 100%; height: auto">
            <div class="w3-content w3-display-container" align="center" style="width: 100%; min-height: 500px; max-height: 500px">
                @{
                    foreach (var attachment in Model.Notification.Attachments)
                    {
                        var base64 = Convert.ToBase64String(attachment.AttachmentContent);
                        var imgSrc = $"data:image/gif;base64,{base64}";
                        <img class="mySlides" src=@imgSrc style="width: 100%; min-height: 500px; max-height: 500px" />
                    }
                }
            </div>
            <button class="" style="margin-left: 20%;" onclick="plusDivs(-1)">&#10094;</button>
            <button class="w3-button w3-display-right" style="margin-right: 20%" onclick="plusDivs(1)">&#10095;</button>
            <div class="panel panel-info">
                <div class="panel-heading" style="min-height: 40px">
                    <h3 class="panel-title" style="float: left">@Model.Notification.NotificationDate</h3>
                    <h3 class="panel-title" style="float: right">Expire's on: @Model.Notification.NotificationExpiry.ToString($"dd/MM/yyyy")</h3>
                </div>
                <div class="panel-body-scroll" style="width: 100%; min-height: 150px; max-height: 150px" align="justify">
                    @Model.Notification.Message
                </div>
            </div>
        </div>

    </div>
</body>
</html>

<script src="~/Scripts/Custom/Slideshow.js"></script>

