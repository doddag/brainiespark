
@using System.Drawing
@using brainiespark.Models
@using Newtonsoft.Json
@model brainiespark.Models.NewNotificationViewModel

@{
    ViewBag.Title = string.Format($"{Model.Notification.NotificationDate}");
}

<!DOCTYPE html>
<html>
<head>
    @*<link href="~/Content/w3.css" rel="stylesheet" /*@>
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet" />
</head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
    

<div class="panel panel-default">
    <div class="panel-body">
        <button type="button" class="btn btn-primary btn-xs" data-dismiss="modal" style="float: right"><b>X</b></button>
        <div class="panel-body-scroll" style="max-height: 300px; min-height: 300px;" align="center">
            <div class="w3-content w3-display-container" align="center" style="width: 70%; height: auto">
                @{
                    foreach (var attachment in Model.Notification.Attachments)
                    {
                        var base64 = Convert.ToBase64String(attachment.AttachmentContent);
                        var imgSrc = $"data:image/gif;base64,{base64}";
                        <img class="mySlides" src=@imgSrc style="width: 100%; height: auto"/>
                    }
                }
            </div>
        </div>
        <button class="" style="margin-left: 20%;" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-display-right" style="margin-right: 20%"onclick="plusDivs(1)">&#10095;</button>
        <div class="panel-body-scroll" style="max-height: 150px; min-height: 150px;" align="justify">
            <div class="w3-content w3-display-container" align="justify" style="width: 100%; height: auto">
                <span>@Model.Notification.Message</span>
            </div>
        </div>
    </div>

</div>
</body>
</html>

<script src="~/Scripts/Custom/Slideshow.js"></script>

